<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:apps="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical">

    <androidx.cardview.widget.CardView

        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        apps:cardElevation="4dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:inputType="text"
                android:text=""
                android:textColorHint="@color/colorPrimary"
                android:textSize="20sp"
                apps:met_baseColor="@color/colorPrimary"
                apps:met_floatingLabel="highlight"
                apps:met_primaryColor="@color/colorPrimary"
                apps:met_singleLineEllipsis="true" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edtPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Price"
                android:inputType="number"
                android:text=""
                android:textColorHint="@color/colorPrimary"
                android:textSize="20sp"
                apps:met_baseColor="@color/colorPrimary"
                apps:met_floatingLabel="highlight"
                apps:met_primaryColor="@color/colorPrimary"
                apps:met_singleLineEllipsis="true" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edtAvailable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Available"
                android:inputType="number"
                android:text=""
                android:textColorHint="@color/colorPrimary"
                android:textSize="20sp"
                apps:met_baseColor="@color/colorPrimary"
                apps:met_floatingLabel="highlight"
                apps:met_primaryColor="@color/colorPrimary"
                apps:met_singleLineEllipsis="true" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edtDiscount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Discount"
                android:inputType="number"
                android:text=""
                android:textColorHint="@color/colorPrimary"
                android:textSize="20sp"
                apps:met_baseColor="@color/colorPrimary"
                apps:met_floatingLabel="highlight"
                apps:met_primaryColor="@color/colorPrimary"
                apps:met_singleLineEllipsis="true" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edtCourse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Course"
                android:inputType="text"
                android:text=""
                android:textColorHint="@color/colorPrimary"
                android:textSize="20sp"
                apps:met_baseColor="@color/colorPrimary"
                apps:met_floatingLabel="highlight"
                apps:met_primaryColor="@color/colorPrimary"
                apps:met_singleLineEllipsis="true" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edtRating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Rating"
                android:inputType="text"
                android:text=""
                android:textColorHint="@color/colorPrimary"
                android:textSize="20sp"
                apps:met_baseColor="@color/colorPrimary"
                apps:met_floatingLabel="highlight"
                apps:met_primaryColor="@color/colorPrimary"
                apps:met_singleLineEllipsis="true" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edtType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="type (veg/nveg)"
                android:inputType="text"
                android:text=""
                android:textColorHint="@color/colorPrimary"
                android:textSize="20sp"
                apps:met_baseColor="@color/colorPrimary"
                apps:met_floatingLabel="highlight"
                apps:met_primaryColor="@color/colorPrimary"
                apps:met_singleLineEllipsis="true" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/itemid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Key"
                android:inputType="number"
                android:text=""
                android:textColorHint="@color/colorPrimary"
                android:textSize="20sp"
                apps:met_baseColor="@color/colorPrimary"
                apps:met_floatingLabel="highlight"
                apps:met_primaryColor="@color/colorPrimary"
                apps:met_singleLineEllipsis="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">



            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</ScrollView>
